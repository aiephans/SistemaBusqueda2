@page
@model SistemaBusqueda2.Pages.UsuariosModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Listado usuarios</h3>
        </div>
        <div class="col-md-6">
            <a asp-page="NuevoUsuario" class="btn btn-primary float-right"><i class="bi bi-person-plus"></i> Nuevo</a>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Nombre usuario
                        </th>
                        <th>
                            Nombres
                        </th>
                        <th>
                            Apellidos
                        </th>
                        <th>
                            Rol
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model.Usuarios)
                    {
                        <tr>
                            <td>
                                @usuario.Id
                            </td>
                            <td>
                                @usuario.NombreUsuario
                            </td>
                            <td>
                                @usuario.Nombres
                            </td>
                            <td>
                                @usuario.Apellidos
                            </td>
                            <td>
                                @usuario.RolId
                            </td>
                            <td>
                                <a asp-page="ActualizarUsuario" asp-route-id="@usuario.Id" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Editar usuario"><i class="bi bi-pencil-square"></i></a>
                                <a asp-page="EliminarUsuario" asp-route-id="@usuario.Id" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Eliminar usuario usuario"><i class="bi bi-trash"></i></a>
                                <a asp-page="ActualizarPassword" asp-route-id="@usuario.Id" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Cambiar contraseña"><i class="bi bi-key"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>

