@page
@model SistemaBusqueda2.Pages.ActualizarPasswordModel
@{
}
<h3>Actualizar contraseña</h3>
<hr />
<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RePassword"></label>
                <input asp-for="RePassword" class="form-control" type="password" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <a asp-page="Usuarios" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <div asp-validation-summary="All" class="text-danger mt-4"></div>
        </form>
    </div>

</div>

